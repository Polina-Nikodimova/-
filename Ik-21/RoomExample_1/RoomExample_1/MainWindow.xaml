        <Label Content="Первая комната" HorizontalAlignment="Left" Height="24" Margin="95,57,0,0" VerticalAlignment="Top" Width="134" FontWeight="Bold"/>
        <Label Content="Длина" HorizontalAlignment="Left" Height="28" Margin="95,108,0,0" VerticalAlignment="Top" Width="98"/>
