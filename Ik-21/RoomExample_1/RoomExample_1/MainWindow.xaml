            <TextBox x:Name="TBLength2" HorizontalAlignment="Left" Height="24" Margin="339,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>
            <TextBox x:Name="TBNumPerson2" HorizontalAlignment="Left" Height="24" Margin="339,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>
            <Label x:Name="LabelPerimetre2" Content="" HorizontalAlignment="Left" Height="24" Margin="313,129,0,0" VerticalAlignment="Top" Width="151"/>
            <Label x:Name="LabelArea2" Content="" HorizontalAlignment="Left" Height="24" Margin="313,164,0,0" VerticalAlignment="Top" Width="151"/>
            <Label x:Name="LabelPersonArea2" Content="" HorizontalAlignment="Left" Height="24" Margin="313,195,0,0" VerticalAlignment="Top" Width="151"/>
            <Label x:Name="LabelAllArea" Content="" HorizontalAlignment="Left" Height="23" Margin="221,315,0,0" VerticalAlignment="Top" Width="96"/>
